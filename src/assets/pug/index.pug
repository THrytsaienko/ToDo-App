doctype html
html
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1")
		meta(http-equiv="X-UA-Compatible" content="ie=edge")

		title ToDo List

		link(href="https://fonts.googleapis.com/css?family=Montserrat:400,500,600,700,800,900" rel="stylesheet")
		link(href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous")
		link(rel="stylesheet" href="styles.css")

	body
		.container
			section.add-task
				h1.add-task__title Task List
				form.add-task__form(id="task-form")
					input.add-task__input(type="text" id="task" placeholder="New Task" autofocus)
					input.add-task__btn.btn(type="submit" value="Add Task")
				<hr>

			section.tasks
				h2.tasks__title Tasks
				input.tasks__btn.btn(type="submit" value="Delete All Tasks")
				ul.tasks__list
		
		script(src="app.js")